{% style %}
.main_img_with_text_block {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media (max-width: 767px) {
.main_img_with_text_block {
padding-top: {{ section.settings.padding_top }}px;
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}

.image_with_text_inner.img-inner-{{ section.id }} {
display: flex;
width: 100%;
{% if section.settings.image_position == 'left' %}
  flex-direction: row;
{% endif %}
{% if section.settings.image_position == 'right' %}
  flex-direction: row-reverse;
{% endif %}
justify-content: center;
align-items: center;
flex-wrap: wrap;
}

.image_block {
width: 50%;
display: block;
box-sizing: border-box;
padding: 0 7.5px;
}

{% endstyle %}

<div
  class="main_img_with_text_block color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <section class="main-content" id="img_with_txt">
    <div class="image_with_text_inner img-inner-{{ section.id }}">
      <div class="image_block">
        {% if section.settings.img == blank %}
        {{ 'collection-1' | placeholder_svg_tag }}
        {% else %}
        <img src="{{ section.settings.img | img_url: 'master' }}" alt="Image">
        {% endif %}
      </div>
      <div class="text_block">
        {% if section.settings.heading %}
        <div class="txt_heading">
          <h2>{{ section.settings.heading }}</h2>
        </div>
        {% endif %}
        {% if section.settings.content %}
        <div class="txt_content">
          {{ section.settings.content }}
        </div>
        {% endif %}
        <div class="svg_icon_main_section">
          {% for block in section.blocks %}
          <div class="svg_icon_inner_item">

            <div class="svg_icon_text_section">
              {% if block.settings.svg_icon != blank %}
              <div class="text_svg_icon">
                {{ block.settings.svg_icon }}
              </div>
              {% else %}
              <div class="text_svg_icon">
                {% render 'icon-accordion'
                , icon: block.settings.icon %}
              </div>
              {% endif %}
              <div class="svg_content">
                <p>{{ block.settings.svg_content }}</p>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
        {% if section.settings.btn_text != blank %}
        <button class="btn_inner_content">
          <a class="custom_btn" href="{{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
        </button>
        {% endif %}
      </div>
    </div>
</div>
</section>
</div>

