{%  style %} 
.main_faq_section {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .inner_faq_section {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: stretch;
    width: 100%;
}

.faq_content_section {
    width:{% if section.settings.img != blank %} 50%;{% else %} 100%;{% endif %}
    display: block;
    padding: 0 7.5px;
}

.faq_img_section {
    width: 50%;
    display: block;
    padding: 0 7.5px;
}

.faq_img_section img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

  @media (max-width: 767px) {
    .main_faq_section {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="main_faq_section">
    <section class="main-content">
        {% if section.settings.heading != blank or section.settings.content-inner != blank %}
            <div class="main_section_head">
              {% if section.settings.heading != blank %}
                <h2 class="heading">{{ section.settings.heading }}</h2>
              {% endif %}
              {% if section.settings.content-inner != blank %}
                {{ section.settings.content-inner }}
              {% endif %}
            </div>
        {% endif %}
        <div class="inner_faq_section">
            <div class="faq_content_section">
                {% render 'faq' %}
            </div>
            {% if section.settings.img != blank %}
                <div class="faq_img_section">
                    <img src="{{ section.settings.img |  img_url: 'master' }}" alt="FAQ Image">
                </div>
            {% endif %}
        </div>
    </section>
</div>

{% schema %}
{
    "name": "FAQ Section",
    "settings": [
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Color Scheme",
            "default": "scheme-1"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding Top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "Padding Bottom",
            "default": 36
        },
        {
            "type": "text",
            "id": "heading",
            "label": "FAQ Heading",
            "default": "Heading"
        }, {
            "type": "text",
            "id": "content-inner",
            "label": "FAQ Subheading",
            "default": "Content"
        },{
            "type": "image_picker",
            "id": "img",
            "label": "FAQ Image Block"
        }
        ],
        "blocks": [
        {
            "type": "page",
            "name": "FAQ question Answer",
            "settings": [
                {
                    "type": "text",
                    "id": "faq_que",
                    "label": "FAQ Question",
                    "default": "Write your question here"
                },
                {
                   "type": "richtext",
                   "id": "faq_ans",
                   "label": "FAQ Answer",
                   "default": "<p>Write your Answer Here</p>" 
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "FAQ Section",
            "blocks": [
                {
                    "type": "page"
                },
                {
                    "type": "page"
                },
                {
                    "type": "page"
                }
            ]
        }
    ]
}
{% endschema %}