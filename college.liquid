<style>
    .college-section {
      padding: 50px 20px;
      background: #f8f8f8;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .college-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      align-items: center;
    }
    
    .college-text h2 {
      font-size: 2rem;
      color: #333;
    }
    
    .college-text p {
      font-size: 1.1rem;
      color: #555;
    }
    
    .college-image img {
      width: 100%;
      max-width: 500px;
      border-radius: 10px;
    }
    
    .college-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-top: 30px;
    }
    
    .grid-item {
      background: #fff;
      padding: 15px;
      text-align: center;
      border-radius: 8px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .grid-item p {
      font-size: 1.1rem;
      color: #333;
      font-weight: bold;
    }
    </style>
    
    <section class="college-section">
      <div class="container">
        <div class="college-content">
          <div class="college-text">
            <h2>{{ section.settings.title }}</h2>
            <p>{{ section.settings.description }}</p>
          </div>
          {% if section.settings.college_image %}
            <div class="college-image">
              <img src="{{ section.settings.college_image | img_url: 'large' }}" alt="College Image">
            </div>
          {% endif %}
        </div>
    
        <div class="college-grid">
          {% for block in section.blocks %}
            <div class="grid-item">
              <p>{{ block.settings.highlight_text }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </section>

    {% schema %}
      {
        "name": "College Section",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Section Title",
            "default": "Welcome to Our College"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Our college is committed to excellence in education, providing modern facilities and expert faculty."
          },
          {
            "type": "image_picker",
            "id": "college_image",
            "label": "College Image"
          }
        ],
        "blocks": [
          {
            "type": "highlight",
            "name": "Highlight Item",
            "settings": [
              {
                "type": "text",
                "id": "highlight_text",
                "label": "Highlight Text",
                "default": "Modern Infrastructure"
              }
            ]
          }
        ],
        "presets": [
          {
            "name": "College Section Grid",
            "category": "Custom"
          }
        ]
      }
      {% endschema %}
      
    
    