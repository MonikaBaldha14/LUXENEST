{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .main_register_page_form {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .main_register_page_form {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .account_form_section,
  .account_image_section {
    padding-top: {{ section.settings.padding_top_form | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_form | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .account_form_section,
    .account_image_section {
      padding-top: {{ section.settings.padding_top_form }}px;
      padding-bottom: {{ section.settings.padding_bottom_form }}px;
    }
  }
{%- endstyle -%}


<div class="main_register_page_form color-{{ section.settings.color_scheme }} gradient isolate">
  <section class="main-content">
    <div class="account_main_section">
      {% if section.settings.img != blank %}
        <div class="account_image_section">
          <img src="{{ section.settings.img |  img_url: 'master' }}" alt="Login Image">
        </div>
      {% endif %}
      <div class="customer account_form_section section-{{ section.id }}-padding">
        <h3>
          {{ 'customer.register.title' | t }}
        </h3>

        <div>
          {%- form 'create_customer'
            , class: 'rform register_form'
            , novalidate: 'novalidate' -%}
            {{ form.errors | default_errors }}

            <div class="form-floating first-name">
              <label class="form_label" for="first-name">{{ 'customer.register.first_name' | t }}*</label>
              <input
                type="text"
                class="form-control first_name"
                name="customer[first_name]"
                {% if form.first_name %}
                value="{{ form.first_name }}"
                {% endif %}
                placeholder="{{ 'customer.register.first_name' | t }}"
                required="">
            </div>

            <div class="form-floating last-name">
              <label class="form_label" for="last-name">{{ 'customer.register.last_name' | t }}*</label>
              <input
                type="text"
                class="form-control last_name"
                name="customer[last_name]"
                {% if form.last_name %}
                value="{{ form.last_name }}"
                {% endif %}
                placeholder="{{ 'customer.register.last_name' | t }}"
                required="">
            </div>

            <div class="form-floating email">
              <label class="form_label" for="email">{{ 'customer.register.email' | t }}*</label>
              <input
                type="email"
                class="form-control email"
                name="customer[email]"
                autocapitalize="off"
                autocomplete="email"
                aria-required="true"
                {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="RegisterForm-email-error"
                {% endif %}
                placeholder="{{ 'customer.register.email' | t }}"
                required="">
            </div>
            <div class="form-floating password">
              <label class="form_label" for="password">{{ 'customer.register.password' | t }}*</label>
              <input
                type="password"
                class="form-control password"
                name="customer[password]"
                {% if form.errors contains 'password' %}
                aria-invalid="true"
                aria-describedby="RegisterForm-password-error"
                {% endif %}
                placeholder="{{ 'customer.register.password' | t }}"
                required="">
            </div>
            <div class="form-floating submit">
              <input
                type="submit"
                class="submit-form registration"
                value="{{ 'customer.register.submit' | t }}">
            </div>
            {% if section.settings.login_btn_title != blank or section.settings.register_note != blank %}
              <div class="create-account">
                <div class="account_col_one">
                  <p>{{ section.settings.register_note }}</p>
                </div>
                <div class="account_col_two">
                  <a href="{{ routes.account_login_url }}" class="create_account">{{ section.settings.login_btn_title }}</a>
                </div>
              </div>
            {% endif %}
          {% endform %}
        </div>
      </div>
    </div>
  </section>
</div>


{% schema %}
  {
    "name": "t:sections.main-register.name",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "info": "t:sections.all.colors.has_cards_info",
        "default": "scheme-1"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Login Image"
      },
      {
        "type": "text",
        "id": "register_note",
        "label": "Register Note",
        "default": "Already have an account?"
      }, {
        "type": "text",
        "id": "login_btn_title",
        "label": "Login Button Title",
        "default": "Login"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_top_form",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom_form",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}