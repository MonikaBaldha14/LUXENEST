<style>
  .main_blog_list_section {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media (max-width: 767px) {
    .main_blog_list_section {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<div class="main_blog_list_section color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <section class="main-content">
    <div class="blogs-section">
      <ul class="blog-main-block">
        {%- for article in blog.articles -%}
          <li class="blog-main-inner">
            {%- if article.image -%}
              <div class="article-img-inner">
                <img
                  class="blog-img"
                  src="{{ article.image | img_url: '150x150', scale: 2 }}"
                  alt="Blog Image">
              </div>
            {%- endif -%}

            <div class="blog-info">
              {% if section.settings.blog_show_author != blank or section.settings.blog_show_date != blank %}
                <div class="blog-date-author">
                  {%- if section.settings.blog_show_author != blank -%}
                    <span>
                      By {{ article.author }}
                    </span>
                  {%- endif -%}
                  {%- if section.settings.blog_show_date != blank -%}
                    <span>
                      {{ article.published_at | time_tag: format: 'date' }}
                    </span>
                  {%- endif -%}
                </div>
              {% endif %}
              <a href="{{ article.url }}">
                <h2 class="blog-title">{{ article.title }}</h2>
              </a>
              <div class="blog-content">
                {%- if article.excerpt.size > 0 -%}
                  <p class="blog-inner-content">{{ article.excerpt }}</p>
                {%- else -%}
                  <p class="blog-inner-content">{{ article.content | strip_html | truncate: 100 }}</p>
                {%- endif -%}
              </div>
            </div>
            <ul class="blog-read">
              <li class="blog-btn">
                <a href="{{ article.url }}" aria-label="Continue Reading: {{ article.title }}">Continue Reading</a>
              </li>
            </ul>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </section>
</div>

{% schema %}
  {
    "name": "Article Post",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      },
      {
        "type": "checkbox",
        "id": "blog_show_author",
        "label": "Show author",
        "default": false
      }, {
        "type": "checkbox",
        "id": "blog_show_date",
        "label": "Show date",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "Article Post"
      }
    ]
  }
{% endschema %}