{% style %}
  .slick-prev,
  .slick-next {
    z-index: 2;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    padding: 0;
    border-radius: 50%;
    border: none;
    background-color: rgba(var(--color-background));
    font-size: 0;
    height: 35px;
    width: 35px;
    line-height: 35px;
    cursor: pointer;
    visibility: visible;
  }

  .slick-prev {
    left: 10px;
  }

  .slick-next {
    right: 10px;
  }

  .slick-prev:before,
  .slick-next:before {
    color: #000;
    line-height: 35px;
  }

  .slick-prev:before {
    content: "\f104"; /* FA icon for left arrow */
    font-family: "Font Awesome 6 Free";
    font-weight: 900;
    font-size: 17px;
  }

  .slick-next:before {
  content: "\f105"; /* Font Awesome icon for right arrow */
  font-family: "Font Awesome 6 Free";
  font-weight: 900;
  font-size: 17px;
}


  .main_service_section.section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .service_inner_item {
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }

