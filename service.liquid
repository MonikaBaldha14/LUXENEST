    padding-top: 6%;
    width: 100%;
    height: 100%;
  }
  
  .service_image_inner img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    object-fit: cover;
    height: 100%;
  }


  .service_block.service-{{ section.id }}.full-width .service_image.service_main_slider {
    width: 100%;
