    color: rgb(var(--color-foreground));
    text-transform: uppercase;
    margin: 0 0 8px;
  }

  .content p {
    font-size: 13px;
    color: rgb(var(--color-foreground));
    line-height: 1.5;
    margin: 0;
  }


  .service_text {
    display: flex;
    height: 100%;
    flex-direction: column;
    border-radius: 0px;
    /* align-items: center; */
