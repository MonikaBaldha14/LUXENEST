      color: {{ block.settings.text_color }};
    }

    .service_button.text_block-{{ block.id }} a {
      color: {{ block.settings.text_color }};
      font-size: {{ block.settings.button_font_size }}px;
    }

  {% endif %}
{% endfor %}


    .service_button {
      margin-top: 15px;
    }

    .service_button a {
      position: relative;
      display: block;
      width: 100%;
      transition: all 0.5s ease-in-out;
    }
   
    .service_button:hover a {
      opacity: 0.8;
    }
  
