<div class="main_service_section section-{{ section.id }}">
  <section class="main-content">
    <div class="service_block service-{{ section.id }} {% if section.blocks.size == 1 %}full-width{% else %}half-width{% endif %}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image' %}
            <div class="service_image {% if block.settings.enable_slider %}service_main_slider{% endif %} image-{{ block.id }}">
              {% if block.settings.enable_slider %}
                {% if block.settings.image_one != blank %}
                  <div class="service_image_inner image-{{ block.id }} service_image_one">
                    <img src="{{ block.settings.image_one | img_url: 'master' }}" alt="Image One">
                  </div>
                {% endif %}
                {% if block.settings.image_two != blank %}
                  <div class="service_image_inner image-{{ block.id }} service_image_two">
                    <img src="{{ block.settings.image_two | img_url: 'master' }}" alt="Image Two">
                  </div>
                {% endif %}
                {% if block.settings.image_three != blank %}
                  <div class="service_image_inner image-{{ block.id }} service_image_three">
                    <img src="{{ block.settings.image_three | img_url: 'master' }}" alt="Image Three">
                  </div>
                {% endif %}
                {% if block.settings.image_four != blank %}
                  <div class="service_image_inner image-{{ block.id }} service_image_four">
                    <img src="{{ block.settings.image_four | img_url: 'master' }}" alt="Image Four">
                  </div>
                {% endif %}
                {% if block.settings.image_five != blank %}
                  <div class="service_image_inner image-{{ block.id }} service_image_five">
                    <img src="{{ block.settings.image_five | img_url: 'master' }}" alt="Image Five">
                  </div>
                {% endif %}
                {% if block.settings.image_six != blank %}
                  <div class="service_image_inner image-{{ block.id }} service_image_six">
                    <img src="{{ block.settings.image_six | img_url: 'master' }}" alt="Image Six">
                  </div>
                {% endif %}
              {% else %}
                {% if block.settings.image_one != blank %}
                  <div class="service_image_inner image-{{ block.id }} service_image_one">
                    <img src="{{ block.settings.image_one | img_url: 'master' }}" alt="Image One">
                  </div>
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'my-custom-class' }}
                {% endif %}
              {% endif %}
            </div>

          {% when 'text' %}
            <div class="service_text content-{{ block.id }} text-{{ block.settings.text_alignment }}">
              {% if block.settings.title != blank %}
                <div class="service_title text_block-{{ block.id }} heading-{{ block.settings.heading_alignment }}">
                  <h2>{{ block.settings.title }}</h2>
                </div>
              {% endif %}
              {% if block.settings.content != blank %}
                <div class="content text_block-{{ block.id }}">
                  {{ block.settings.content }}
                </div>
              {% endif %}
              {% if block.settings.button_url != blank %}
                <div class="service_button text_block-{{ block.id }}">
                  <a href="{{ block.settings.button_url }}">
                    {{ block.settings.button_text }}
                    <svg width="20" height="20" class="arrow" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg">
                      <!-- Dashed Line -->
                      <line x1="5" y1="30" x2="45" y2="30" stroke="black" stroke-width="5" stroke-dasharray="8,5"></line>
                      <!-- Arrowhead -->
                      <polygon points="45,20 60,30 45,40" fill="black"></polygon>
                    </svg>
                  </a>
                </div>
              {% endif %}
              {% if block.settings.custom_liquid_code != blank %}
                <div class="custom-liquid-block">
                  {{ block.settings.custom_liquid_code }}
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </section>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    {% for block in section.blocks %}
    var slider = $('.service_main_slider.image-{{ block.id }}');
    if (slider.length) {
      slider.slick({
        centerMode: true,
        centerPadding: '0px',
        slidesToShow: 1,
        infinite: true,
        arrows: {{ block.settings.enable_arrows | default: true | json }},
        dots: false,
        autoplay: {{ block.settings.autoplay | default: false }},
        autoplaySpeed: {{ block.settings.autoplay_speed | default: 3000 }},
        pauseOnHover: false,
        {% if block.settings.fade %}
          fade: true,
          cssEase: 'linear'
        {% endif %}
      });
    }
    {% endfor %}
  });
</script>


