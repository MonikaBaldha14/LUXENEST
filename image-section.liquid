{% style %}
  .main_discount_section {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media (max-width: 767px) {
    .main_discount_section {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {% for block in section.blocks %}
    .image_overlay.overlay-{{ block.id }} {
      background-color: {{ block.settings.img_gradient_color }};
      opacity: {{ block.settings.image_gradient_darkness }}%;
    }
  {% endfor %}
{% endstyle %}

<div class="main_discount_section color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <section class="main-content">
    {% assign block_count = section.blocks.size %}
    <div class="discount_flex_block color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding {% if block_count >= 4 %}use-slick-slider{% endif %}" id="discount_block">
      {% for block in section.blocks %}
        <div class="discount_inner_item {% if block_count == 1 %}w-100{% elsif block_count == 2 %}w-50{% elsif block_count == 3 %}w-33{% elsif block_count == 4 %}w-25{% endif %}">
          {% if block.settings.discount_img == blank %}
            {{ 'collection-1' | placeholder_svg_tag }}
          {% else %}
            <a class="discount_url_item" href="{{ block.settings.btn_url }}">
              <div class="discount_img_block">
                <img
                  class="discount_img"
                  src="{{ block.settings.discount_img | img_url: 'master' }}"
                  alt="Discount Image">
              </div>
            </a>
          {% endif %}
          <div class="image_overlay overlay-{{ block.id }}"></div>
          <div class="discount_content_block">
            {% if block.settings.discount_head %}
              <div class="discount_heading">
                <h2>{{ block.settings.discount_head }}</h2>
              </div>
            {% endif %}
            {% if block.settings.content %}
              <div class="image_section_content">{{ block.settings.content }}</div>
            {% endif %}
            {% if block.settings.btn_text != blank %}
              <div class="discount_btn">
                <a href="{{ block.settings.btn_url }}" class="discount_inner_btn">{{ block.settings.btn_text }}</a>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
</div>

{% if section.blocks.size >= 5 %}
  <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      $('.use-slick-slider').slick({
        slidesToShow: 3,
        slidesToScroll: 1,
        arrows: true,
        dots: false,
        responsive: [
          {
            breakpoint: 768,
            settings: {
              slidesToShow: 1
            }
          }
        ]
      });
    });
  </script>
{% endif %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />


{% schema %}
  {
    "name": "Image Section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Discount Blocks",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "discount_img",
            "label": "Discount Page"
          },
          {
            "type": "color",
            "id": "img_gradient_color",
            "label": "Image Gradient Color",
            "default": "rgb(0, 0, 0)"
          },
          {
            "type": "range",
            "id": "image_gradient_darkness",
            "min": 0,
            "max": 100,
            "step": 10,
            "unit": "%",
            "label": "Image Gradient Darkness",
            "default": 20
          },
          {
            "type": "text",
            "id": "discount_head",
            "label": "Discount Heading",
            "default": "Heading"
          }, {
            "type": "richtext",
            "id": "content",
            "label": "Description",
            "default": "<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Distinctio, sequi.</p>"
          }, {
            "type": "url",
            "id": "btn_url",
            "label": "Add your link here"
          }, {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text",
            "default": "Button"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Section",
        "blocks": [
          {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}