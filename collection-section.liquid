{% style %}
.main_collection_section {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media (max-width: 767px) {
.main_collection_section {
padding-top: {{ section.settings.padding_top }}px;
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}

{% for block in section.blocks %}
.image_overlay.overlay-{{ block.id }} {
background-color: {{ block.settings.img_gradient_color }};
opacity: {{ block.settings.image_gradient_darkness }}%;
}
{% endfor %}
{% endstyle %}

<div
  class="main_collection_section color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <section class="main-content">
    <div class="main-collection-block collection_list_section">
      <div class="featured-product-inner" id="collectionLoop">
        {% if section.settings.heading != blank or section.settings.content-inner != blank %}
        <div class="main_section_head">
          {% if section.settings.heading != blank %}
          <h2 class="heading">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.content-inner != blank %}
          {{ section.settings.content-inner }}
          {% endif %}
        </div>
        {% endif %}

        <div class="collection-inner-block">
          {% for block in section.blocks %}
          {% assign selected_collections = block.settings.collections %}
          <div class="collection-main">
            {% if block.settings.collections != blank %}
            <a class="coll_url" href="{{ selected_collections.url }}">
              <div class="custom-inner-collection-img">
                <img src="{{ selected_collections.featured_image | img_url: 'master' }}" alt="Collection Image">
                <div class="image_overlay overlay-{{ block.id }}"></div>
              </div>
              {% if section.settings.title_show != blank %}
              <span class="collection-name">
                <p>{{ selected_collections.title }}</p>
              </span>
              {% endif %}
            </a>
            {% else %}
            <div class="custom-inner-collection-img">
              {{ 'collection-1' | placeholder_svg_tag }}
              <div class="image_overlay overlay-{{ block.id }}"
                style="background-color: {{ section.settings.img_gradient_color }}; opacity: {{ section.settings.image_gradient_darkness }}%">
              </div>
            </div>
            {% if section.settings.title_show != blank %}
            <span class="collection-name">
              <p>Your Collection Title</p>
            </span>
            {% endif %}
            {% endif %}
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
</div>

{% schema %}
{
"name": "Custom Collection List",
"settings": [
{
"type": "color_scheme",
"id": "color_scheme",
"label": "Color Scheme",
"default": "scheme-1"
},
{
"type": "range",
"id": "padding_top",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Top",
"default": 36
},
{
"type": "range",
"id": "padding_bottom",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Bottom",
"default": 36
},
{
"type": "text",
"id": "heading",
"label": "HotsPot Heading",
"default": "Heading"
}, {
"type": "richtext",
"id": "content-inner",
"label": "Description"
}, {
"type": "checkbox",
"id": "title_show",
"label": "Collection Title"
}
],
"blocks": [
{
"name": "Collection List",
"type": "collection",
"limit": 5,
"settings": [
{
"type": "collection",
"id": "collections",
"label": "Collection List"
}, {
"type": "color",
"id": "img_gradient_color",
"label": "Image Gradient Color",
"default": "rgb(0, 0, 0)"
}, {
"type": "range",
"id": "image_gradient_darkness",
"min": 0,
"max": 100,
"step": 10,
"unit": "%",
"label": "Image Gradient Darkness",
"default": 20
}
]
}
],
"presets": [
{
"name": "Custom Collection List",
"blocks": [
{
"type": "collection"
}, {
"type": "collection"
}, {
"type": "collection"
}
]
}
]
}
{% endschema %}