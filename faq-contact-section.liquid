<style>
  .faq_contact_section {
    padding-top: {
        {
        section.settings.padding_top | times: 0.75 | round: 0
      }
    }

    px;

    padding-bottom: {
        {
        section.settings.padding_bottom | times: 0.75 | round: 0
      }
    }

    px;
  }

  @media (max-width: 767px) {
    .faq_contact_section {
      padding-top: {
          {
          section.settings.padding_top
        }
      }

      px;

      padding-bottom: {
          {
          section.settings.padding_bottom
        }
      }

      px;
    }
  }
</style>

<div class="faq_contact_section">
  <section class="main-content">
    <div class="main-faq-section color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding"
      id="faq">
      {% if section.settings.heading != blank or section.settings.content-inner != blank %}
      <div class="main_section_head">
        {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.content-inner != blank %}
        {{ section.settings.content-inner }}
        {% endif %}
      </div>
      {% endif %}
      <div class="faq_main_section">
        <div class="faq-content">
          {% if section.settings.page.content != blank %}
          {{ section.settings.page.content }}
          {%- else -%}
          <div class="page-placeholder-wrapper placeholder">
            {{ 'page' | placeholder_svg_tag: 'page-placeholder' }}
          </div>
          {%- endif -%}
        </div>
        <div
          class="collapsible-content-contact color-{{ section.settings.color_scheme_contact }} gradient section-{{ section.id }}-padding">
          {% if section.settings.contact != blank or section.settings.content-inner != blank %}
          <div class="main_section_head">
            {% if section.settings.contact != blank %}
            <h2 class="heading">{{ section.settings.contact }}</h2>
            {% endif %}
            {% if section.settings.content-inner != blank %}
            {{ section.settings.content-inner }}
            {% endif %}
          </div>
          {% endif %}
          {% if section.settings.btn_text != blank %}
          <button class="btn_inner_content">
            <a class="custom_btn" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
          </button>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
</div>


{% schema %}
{
"name": "FAQ Contact Section",
"settings": [
{
"type": "color_scheme",
"id": "color_scheme",
"label": "Color Scheme",
"default": "scheme-1"
},
{
"type": "range",
"id": "padding_top",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Top",
"default": 36
},
{
"type": "range",
"id": "padding_bottom",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Bottom",
"default": 36
},
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "Heading"
}, {
"type": "richtext",
"id": "content-inner",
"label": "Description"
}, {
"type": "color_scheme",
"id": "color_scheme_contact",
"label": "Color Scheme Content",
"default": "scheme-1"
}, {
"type": "page",
"id": "page",
"label": "Add Page"
}, {
"type": "text",
"id": "contact",
"label": "Contact Head",
"default": "Contact Head"
}, {
"type": "richtext",
"id": "content",
"label": "Description"
}, {
"type": "url",
"id": "btn_link",
"label": "Add your Link Here"
}, {
"type": "text",
"id": "btn_text",
"label": "Button Text",
"default": "Button"
}
],
"presets": [
{
"name": "FAQ Contact Section"
}
]
}
{% endschema %}