                            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" class="icon icon-cart" aria-hidden="true" focusable="false" role="presentation">
                            <path d="M4.5 8.01995L8.52569 3.62829C9.31836 2.76355 10.6816 2.76355 11.4743 3.62829L15.5 8.01995M17.5975 9.31685L15.4243 16.3168C15.2944 16.7352 14.9073 17.0204 14.4693 17.0204H5.58499C5.14911 17.0204 4.76345 16.738 4.63173 16.3225L2.41278 9.32253C2.2084 8.67779 2.68968 8.02035 3.36603 8.02035H16.6425C17.3163 8.02035 17.7973 8.67329 17.5975 9.31685Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                            </svg>
                            <span class="product-count">{{ cart.item_count }}</span>
                        </div>
                        </a>
                    </li>
                    </ul>
                </div>
          </div>
        </div>
      </div>
    </section>
    <div class="nav_main_section">
      {%  render 'mega-menu' %}
    </div>
    {% if section.settings.main_title != blank %}
      <div class="colelction_drop_main">
      {% render 'custom-collection-nav' %}
    </div>
    {% endif %}
  </div>
</header>

  <script>
  $(document).ready(function () {
    var previousScroll = 0;

    $(window).on("scroll", function () {
      var currentScroll = $(this).scrollTop();
      var nav = $("[data-nav-status='toggle']");

      // Scrolling down
      if (currentScroll > previousScroll && currentScroll > 50) {
        nav.removeClass("is-visible").addClass("is-hidden");
      } 
      // Scrolling up
      else {
        nav.removeClass("is-hidden is-visible"); // Clear all
        if (currentScroll > 50) {
          nav.addClass("is-visible");
        }
      }

      previousScroll = currentScroll;
    });
  });
</script>


