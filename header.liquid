<style>
  .main_header_section {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media (max-width: 767px) {
    .main_header_section {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .header-inner-section.header-block.header-second-block a img{
    width: {{ settings.logo_width }}px;
  }
</style>

<header>
  <div class="main_header_section color-{{ section.settings.color_scheme }} gradient {% if section.settings.sticky_header != blank %}{% if template == 'index' %}sticky_header{% endif %}{% endif %}" {% if section.settings.sticky_header !="blank" %}
    data-nav-status="toggle"
  {% endif %} >
    <section class="main-content">
      <div class="custon-header">
        <div class="main-header-row">
          <div class="main-header-content">
            <div class="header-lower-nav">
              <div class="header-main-inner-section">
                        <div class="header-block menu-toggle">
                            <span class="responsive_header">
                                <svg class="icon icon-hamburger active" width="20" height="20" viewBox="0 0 20 20" aria-hidden="true" focusable="false" role="presentation" class="icon icon-hamburger" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3.125 10H16.875" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                <path d="M3.125 5H16.875" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                <path d="M3.125 15H16.875" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                </svg>
                                <svg class="close_header" width="20" height="20" viewBox="0 0 20 20" aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.8333 4.16675L4.16667 15.8334M15.8333 15.8334L4.16667 4.16675" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
                                </svg>
                            </span>
                          </div>
                          <div class="header-inner-section header-block header-second-block">
                              <a href="/">
                              {% if settings.logo != blank %}
                                <img
                                  class="img-logo"
                                  src="{{ settings.logo |  img_url: '500x250'  }}"
                                  alt="img-logo">
                                  {% else %}
                                  <h1 class="logo_txt">{{ shop.name }}</h1>
                              {% endif %}
                              </a>
                          </div>
                    <ul class="header-inner-section header-block header-last-block">
                    
                    <li class="user">
                        {% if customer.has_account %}
                        <a href="{{ routes.account_url }}" class="user">
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-account">
                            <path d="M1.59961 13.675C1.59961 11.158 3.70247 9.11756 7.99961 9.11756C12.2968 9.11756 14.3996 11.158 14.3996 13.675C14.3996 14.0755 14.1075 14.4001 13.7471 14.4001H2.25216C1.89177 14.4001 1.59961 14.0755 1.59961 13.675Z" stroke="currentColor" stroke-width="1.3"></path>
                            <path d="M10.3996 4.0001C10.3996 5.32558 9.32509 6.4001 7.99961 6.4001C6.67413 6.4001 5.59961 5.32558 5.59961 4.0001C5.59961 2.67461 6.67413 1.6001 7.99961 1.6001C9.32509 1.6001 10.3996 2.67461 10.3996 4.0001Z" stroke="currentColor" stroke-width="1.3"></path>
                        </svg>
                        </a>
                        {% else %}
                        <a href="{{ routes.account_login_url }}" class="user">
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" class="icon icon-account">
                            <path d="M1.59961 13.675C1.59961 11.158 3.70247 9.11756 7.99961 9.11756C12.2968 9.11756 14.3996 11.158 14.3996 13.675C14.3996 14.0755 14.1075 14.4001 13.7471 14.4001H2.25216C1.89177 14.4001 1.59961 14.0755 1.59961 13.675Z" stroke="currentColor" stroke-width="1.3"></path>
                            <path d="M10.3996 4.0001C10.3996 5.32558 9.32509 6.4001 7.99961 6.4001C6.67413 6.4001 5.59961 5.32558 5.59961 4.0001C5.59961 2.67461 6.67413 1.6001 7.99961 1.6001C9.32509 1.6001 10.3996 2.67461 10.3996 4.0001Z" stroke="currentColor" stroke-width="1.3"></path>
                            </svg>
                            </a>
                        {% endif %}
                    </li>
                    <li class="search">
                        <a class="search-logo">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" focusable="false" aria-hidden="true" role="presentation" class="icon icon-search">
                        <path d="M14.1057 14.2L17 17M16.0667 9.53333C16.0667 13.1416 13.1416 16.0667 9.53333 16.0667C5.92507 16.0667 3 13.1416 3 9.53333C3 5.92507 5.92507 3 9.53333 3C13.1416 3 16.0667 5.92507 16.0667 9.53333Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
                        </svg>
                        </a>
                    </li>
                    <li class="cart">
