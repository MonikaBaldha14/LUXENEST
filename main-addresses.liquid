<script src="{{ 'customer.js' | asset_url }}" defer></script>


<style>
  .customer_addresses {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .customer_addresses {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<div class="customer_addressesn color-{{ section.settings.color_scheme }} gradient">
  <section class="main-content">
    <div class="customer addresses section-{{ section.id }}-padding" data-customer-addresses>
      <div class="address_main_section">
        <h1 class="main-heading">{{ 'customer.account.title' | t }}</h1>
        <div class="return_url">
          <a href="{{ routes.account_url }}">{{ 'customer.account.return' | t }}</a>
        </div>
      </div>

      <div class="add_new_address_main" data-address>
        <div class="add_new_btn">
          <button
            class="address_btn_new_address"
            type="button"
            aria-expanded="false"
            aria-controls="AddAddress">
            {{ 'customer.addresses.add_new' | t }}
          </button>
          <div class="new_add_form" id="AddAddress">
            <h2 class="address_heading" id="AddressNewHeading">{{ 'customer.addresses.add_new' | t }}</h2>
            {% form 'customer_address'
              , customer.new_address
              , aria-labelledBy: 'AddressNewHeading'
              , class: 'new_address_form' %}
              <div class="form_field">
                <label for="AddressFirstNameNew" class="form_label_address">{{ 'customer.addresses.first_name' | t }}</label>
                <input
                  class="form-control-address fname"
                  type="text"
                  id="AddressFirstNameNew"
                  name="address[first_name]"
                  value="{{ form.first_name }}"
                  autocomplete="given-name"
                  placeholder="{{ 'customer.addresses.first_name' | t }}">
              </div>
              <div class="form_field">
                <label for="AddressLastNameNew" class="form_label_address">{{ 'customer.addresses.last_name' | t }}</label>
                <input
                  class="form-control-address lname"
                  type="text"
                  id="AddressLastNameNew"
                  name="address[last_name]"
                  value="{{ form.last_name }}"
                  autocomplete="family-name"
                  placeholder="{{ 'customer.addresses.last_name' | t }}">
              </div>
              <div class="form_field">
                <label for="AddressCompanyNew" class="form_label_address">{{ 'customer.addresses.company' | t }}</label>
                <input
                  class="form-control-address address"
                  type="text"
                  id="AddressCompanyNew"
                  name="address[company]"
                  value="{{ form.company }}"
                  autocomplete="organization"
                  placeholder="{{ 'customer.addresses.company' | t }}">

              </div>
              <div class="form_field">
                <label for="AddressAddress1New" class="form_label_address">{{ 'customer.addresses.address1' | t }}</label>
                <input
                  class="form-control-address add1"
                  type="text"
                  id="AddressAddress1New"
                  name="address[address1]"
                  value="{{ form.address1 }}"
                  autocomplete="address-line1"
                  placeholder="{{ 'customer.addresses.address1' | t }}">

              </div>
              <div class="form_field">
                <label for="AddressAddress2New" class="form_label_address">{{ 'customer.addresses.address2' | t }}</label>
                <input
                  class="form-control-address add2"
                  type="text"
                  id="AddressAddress2New"
                  name="address[address2]"
                  value="{{ form.address2 }}"
                  autocomplete="address-line2"
                  placeholder="{{ 'customer.addresses.address2' | t }}">
              </div>
              <div class="form_field">
                <label for="AddressCityNew" class="form_label_address">{{ 'customer.addresses.city' | t }}</label>
                <input
                  class="form-control-address city"
                  type="text"
                  id="AddressCityNew"
                  name="address[city]"
                  value="{{ form.city }}"
                  autocomplete="address-level2"
                  placeholder="{{ 'customer.addresses.city' | t }}">

              </div>
              <div>
                <label for="AddressCountryNew" class="form_label_address">{{ 'customer.addresses.country' | t }}</label>
                <div class="form_select_field">
                  <select
                    class="select_field"
                    id="AddressCountryNew"
                    name="address[country]"
                    data-default="{{ form.country }}"
                    autocomplete="country">
                    {{ all_country_option_tags }}
                  </select>
                </div>
              </div>
              <div id="AddressProvinceContainerNew" style="display: none">
                <label for="AddressProvinceNew" class="form_label_address">{{ 'customer.addresses.province' | t }}</label>
                <div class="form_select_field">
                  <select
                    class="select_field"
                    id="AddressProvinceNew"
                    name="address[province]"
                    data-default="{{ form.province }}"
                    autocomplete="address-level1"></select>
                  </svg>
                </div>
              </div>
              <div class="form_field">
                <label for="AddressZipNew" class="form_label_address">{{ 'customer.addresses.zip' | t }}</label>
                <input
                  class="form-control-address zipcode"
                  type="text"
                  id="AddressZipNew"
                  name="address[zip]"
                  value="{{ form.zip }}"
                  autocapitalize="characters"
                  autocomplete="postal-code"
                  placeholder="{{ 'customer.addresses.zip' | t }}">
              </div>
              <div class="form_field">
                <label for="AddressPhoneNew" class="form_label_address">{{ 'customer.addresses.phone' | t }}</label>
                <input
                  class="form-control-address phone"
                  type="tel"
                  id="AddressPhoneNew"
                  name="address[phone]"
                  value="{{ form.phone }}"
                  autocomplete="tel"
                  placeholder="{{ 'customer.addresses.phone' | t }}">
              </div>
              <div>
                {{ form.set_as_default_checkbox }}
                <label for="address_default_address_new" class="form_label_address">{{ 'customer.addresses.set_default' | t }}</label>
              </div>
              <div class="form_btns">
                <button class="form_add_btn address_btn_add">{{ 'customer.addresses.add' | t }}</button>
                <button class="form_add_btn address_btn_cancel" type="reset">{{ 'customer.addresses.cancel' | t }}</button>
              </div>
            {%- endform -%}
          </div>
        </div>


      </div>

      <ul role="list" class="address_main_list">
        {%- for address in customer.addresses -%}
          <li class="address_list_inner" data-address>
            <div class="address_main_part">
              {%- if address == customer.default_address -%}
                <h3 class="address_heading">{{ 'customer.addresses.default' | t }}</h3>
              {%- endif -%}
              <p class="customer_address">{{ address | format_address }}</p>
              <button
                class="address_btn edit"
                type="button"
                id="EditFormButton_{{ address.id }}"
                aria-label="{{ 'customer.addresses.edit_address' | t }} {{ forloop.index }}"
                aria-controls="EditAddress_{{ address.id }}"
                aria-expanded="false"
                data-address-id="{{ address.id }}">
                <span>{{ 'customer.addresses.edit' | t }}</span>
              </button>
              <button
                class="address_btn remove"
                type="button"
                aria-label="{{ 'customer.addresses.delete' | t }} {{ forloop.index }}"
                data-target="{{ address.url }}"
                data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                <span>{{ 'customer.addresses.delete' | t }}</span>
              </button>

              <div class="address_main_form" id="EditAddress_{{ address.id }}">
                <h2 class="address_heading">{{ 'customer.addresses.edit_address' | t }}</h2>
                {%- form 'customer_address'
                  , address
                  , class: 'customer_edit_address' -%}
                  <div class="form_field">
                    <label for="AddressFirstName_{{ form.id }}" class="form_label_address">{{ 'customer.addresses.first_name' | t }}</label>
                    <input
                      class="form-control-address fname"
                      type="text"
                      id="AddressFirstName_{{ form.id }}"
                      name="address[first_name]"
                      value="{{ form.first_name }}"
                      autocomplete="given-name"
                      placeholder="{{ 'customer.addresses.first_name' | t }}">

                  </div>
                  <div class="form_field">
                    <label for="AddressLastName_{{ form.id }}" class="form_label_address">{{ 'customer.addresses.last_name' | t }}</label>
                    <input
                      class="form-control-address company"
                      type="text"
                      id="AddressLastName_{{ form.id }}"
                      name="address[last_name]"
                      value="{{ form.last_name }}"
                      autocomplete="family-name"
                      placeholder="{{ 'customer.addresses.last_name' | t }}">
                  </div>
                  <div class="form_field">
                    <label for="AddressCompany_{{ form.id }}" class="form_label_address">{{ 'customer.addresses.company' | t }}</label>
                    <input
                      class="form-control-address company"
                      type="text"
                      id="AddressCompany_{{ form.id }}"
                      name="address[company]"
                      value="{{ form.company }}"
                      autocomplete="organization"
                      placeholder="{{ 'customer.addresses.company' | t }}">
                  </div>
                  <div class="form_field">
                    <label for="AddressAddress1_{{ form.id }}" class="form_label_address">{{ 'customer.addresses.address1' | t }}</label>
                    <input
                      class="form-control-address add1"
                      type="text"
                      id="AddressAddress1_{{ form.id }}"
                      name="address[address1]"
                      value="{{ form.address1 }}"
                      autocomplete="address-line1"
                      placeholder="{{ 'customer.addresses.address1' | t }}">
                  </div>
                  <div class="form_field">
                    <label for="AddressAddress2_{{ form.id }}" class="form_label_address">{{ 'customer.addresses.address2' | t }}</label>
                    <input
                      class="form-control-address add2"
                      type="text"
                      id="AddressAddress2_{{ form.id }}"
                      name="address[address2]"
                      value="{{ form.address2 }}"
                      autocomplete="address-line2"
                      placeholder="{{ 'customer.addresses.address2' | t }}">
                  </div>
                  <div class="form_field">
                    <label for="AddressCity_{{ form.id }}" class="form_label_address">{{ 'customer.addresses.city' | t }}</label>
                    <input
                      class="form-control-address city"
                      type="text"
                      id="AddressCity_{{ form.id }}"
                      name="address[city]"
                      value="{{ form.city }}"
                      autocomplete="address-level2"
                      placeholder="{{ 'customer.addresses.city' | t }}">
                  </div>
                  <div>
                    <label for="AddressCountry_{{ form.id }}" class="form_label_address">
                      {{ 'customer.addresses.country' | t }}
                    </label>
                    <div class="form_select_field">
                      <select
                        class="select_field"
                        id="AddressCountry_{{ form.id }}"
                        name="address[country]"
                        data-address-country-select
                        data-default="{{ form.country }}"
                        data-form-id="{{ form.id }}"
                        autocomplete="country">
                        {{ all_country_option_tags }}
                      </select>
                      
                    </div>
                  </div>
                  <div id="AddressProvinceContainer_{{ form.id }}" style="display:none;">
                    <label for="AddressProvince_{{ form.id }}" class="form_label_address">
                      {{ 'customer.addresses.province' | t }}
                    </label>
                    <div class="form_select_field">
                      <select
                        class="select_field"
                        id="AddressProvince_{{ form.id }}"
                        name="address[province]"
                        data-default="{{ form.province }}"
                        autocomplete="address-level1"></select>
                    </div>
                  </div>
                  <div class="form_field">
                    <label for="AddressZip_{{ form.id }}" class="form_label_address">{{ 'customer.addresses.zip' | t }}</label>
                    <input
                      class="form-control-address zipcode"
                      type="text"
                      id="AddressZip_{{ form.id }}"
                      name="address[zip]"
                      value="{{ form.zip }}"
                      autocapitalize="characters"
                      autocomplete="postal-code"
                      placeholder="{{ 'customer.addresses.zip' | t }}">

                  </div>
                  <div class="form_field">
                    <label for="AddressPhone_{{ form.id }}" class="form_label_address">{{ 'customer.addresses.phone' | t }}</label>
                    <input
                      class="form-control-address phone"
                      type="tel"
                      id="AddressPhone_{{ form.id }}"
                      name="address[phone]"
                      value="{{ form.phone }}"
                      autocomplete="tel"
                      placeholder="{{ 'customer.addresses.phone' | t }}">

                  </div>
                  <div>
                    {{ form.set_as_default_checkbox }}
                    <label for="address_default_address_{{ form.id }}" class="form_label_address">
                      {{ 'customer.addresses.set_default' | t }}
                    </label>
                  </div>
                  <div class="form_btns">
                    <button class="address_btn_update">{{ 'customer.addresses.update' | t }}</button>
                    <button class="address_btn_delete" type="reset">{{ 'customer.addresses.cancel' | t }}</button>
                  </div>
                {%- endform -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </section>
</div>


<script>
  window.addEventListener('load', () => {
    typeof CustomerAddresses !== 'undefined' && new CustomerAddresses();
  });
</script>

<script></script>

{% schema %}
  {
    "name": "t:sections.main-addresses.name",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}