{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .main_login_page_form {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .main_login_page_form {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .account_form_section,
  .account_image_section {
    padding-top: {{ section.settings.padding_top_form | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_form | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .account_form_section,
    .account_image_section {
      padding-top: {{ section.settings.padding_top_form }}px;
      padding-bottom: {{ section.settings.padding_bottom_form }}px;
    }
  }
{%- endstyle -%}

{%- if section.settings.enable_shop_login_button == false -%}
  {%- assign hide_shop_login_button = true -%}
{%- endif -%}


<div class="main_login_page_form color-{{ section.settings.color_scheme }} gradient isolate">
  <section class="main-content">
    <div class="account_main_section">
      {% if section.settings.img != blank %}
        <div class="account_image_section">
          <img src="{{ section.settings.img |  img_url: 'master' }}" alt="Login Image">
        </div>
      {% endif %}
      <div class="customer account_form_section section-{{ section.id }}-padding">
        <h3 id="recover" tabindex="-1">
          {{ 'customer.recover_password.title' | t }}
        </h3>
        <div>
          <p class="mail_notification">
            {{ 'customer.recover_password.subtext' | t }}
          </p>

          {%- form 'recover_customer_password'
            , class: 'recover_form' -%}
            {%- if form.posted_successfully? -%}
              <div role="status">
                <p class="mail_notification">We've sent you an email with a link to update your password.</p>
              </div>
            {%- endif -%}

            <div class="recover">
              <div class="form-floating password">
                <label for="customerEmail" class="form_label">{{ 'customer.login_page.email' | t }}*</label>
                <input
                  type="email"
                  name="email"
                  class="form-control email"
                  required=""
                  placeholder="{{ 'customer.login_page.email' | t }}">
              </div>

              {%- if form.errors -%}
                <small id="RecoverEmail-email-error" class="form__message">
                  <svg
                    aria-hidden="true"
                    focusable="false"
                    viewBox="0 0 13 13">
                    <circle
                      cx="6.5"
                      cy="6.50049"
                      r="5.5"
                      stroke="white"
                      stroke-width="2" />
                    <circle
                      cx="6.5"
                      cy="6.5"
                      r="5.5"
                      fill="#EB001B"
                      stroke="#EB001B"
                      stroke-width="0.7" />
                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white" />
                    <path
                      d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z"
                      fill="white"
                      stroke="#EB001B"
                      stroke-width="0.7">
                  </svg>
                  {{ form.errors.messages.form }}
                </small>
              {%- endif -%}

              <div class="form-floating submit">
                <input
                  type="submit"
                  class="submit-form registration recover"
                  value="{{ 'customer.login_page.submit' | t }}">
              </div>

              <div class="create-account">
                <div class="account_col_two">
                  <a class="create_account login" href="#login">{{ section.settings.back_login }}</a>
                </div>
              </div>
            </div>
          {%- endform -%}
        </div>

        <h3 id="login" tabindex="-1">
          {{ 'customer.login_page.title' | t }}
        </h3>
        <div>
          {%- if recover_success == true -%}
            <h3
              class="form__message"
              tabindex="-1"
              autofocus>
              <span class="svg-wrapper">
                {{- 'icon-success.svg' | inline_asset_content -}}
              </span>
              {{ 'customer.recover_password.success' | t }}
            </h3>
          {%- endif -%}
          {%- form 'customer_login'
            , class: 'rform login_form'
            , novalidate: 'novalidate' -%}
            {%- if form.errors -%}
              <p
                class="form__message"
                tabindex="-1"
                autofocus>
                <svg
                  class="error_svg"
                  aria-hidden="true"
                  focusable="false"
                  viewBox="0 0 13 13">
                  <circle
                    cx="6.5"
                    cy="6.50049"
                    r="5.5"
                    stroke="white"
                    stroke-width="2" />
                  <circle
                    cx="6.5"
                    cy="6.5"
                    r="5.5"
                    fill="#EB001B"
                    stroke="#EB001B"
                    stroke-width="0.7" />
                  <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white" />
                  <path
                    d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z"
                    fill="white"
                    stroke="#EB001B"
                    stroke-width="0.7">
                </svg>
                {{ form.errors | default_errors }}
              </p>
            {%- endif -%}
            <div class="form-floating email">
              <label for="email" class="form_label">{{ 'customer.login_page.email' | t }}*</label>
              <input
                type="email"
                class="form-control email"
                name="customer[email]"
                placeholder="{{ 'customer.login_page.email' | t }}"
                required="">
            </div>

            <div class="form-floating password">
              <label for="password" class="form_label">{{ 'customer.login_page.password' | t }}*</label>
              <input
                type="password"
                class="form-control password"
                name="customer[password]"
                placeholder="{{ 'customer.login_page.password' | t }}"
                required="">
            </div>

            <div class="frgt_password">
              <a
                class="create_account"
                id="password"
                href="#recover">{{ 'customer.login_page.forgot_password' | t }}</a>
            </div>

            <div class="form-floating submit">
              <input
                type="submit"
                class="submit-form registration"
                value="{{ 'customer.login_page.sign_in' | t }}">
            </div>

            <div class="create-account">
              <div class="account_col_two">
                <a class="create_account" href="{{ routes.account_register_url }}">{{ 'customer.login_page.create_account' | t }}</a>
              </div>
            </div>
          {% endform %}
        </div>

        {%- if shop.checkout.guest_login -%}
          <div>
            <hr>
            <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

            {%- form 'guest_login' -%}
              <button>
                {{ 'customer.login_page.guest_continue' | t }}
              </button>
            {%- endform -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </section>
</div>

{% schema %}
  {
    "name": "t:sections.main-login.name",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "info": "t:sections.all.colors.has_cards_info",
        "default": "scheme-1"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Login Image"
      },
       {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_top_form",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom_form",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}