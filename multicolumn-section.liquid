<style>
  .main_multicolum {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media (max-width: 767px) {
    .main_multicolum {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<div class="main_multicolum color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <section class="main-content" id="multicolumn_txt">
    <div class="multicolumn_inner">
      {% for block in section.blocks %}
        <div class="multicolumn_text">
          {% if block.settings.icon %}
            <div class="text_svg_icon multicolumn">
              {% render 'icon-accordion'
                , icon: block.settings.icon %}
            </div>
          {% endif %}
          {% if block.settings.txt_head %}
            <div class="txt_heading multicolumn">
              <h4>{{ block.settings.txt_head }}</h4>
            </div>
          {% endif %}
          {% if block.settings.txt_content %}
            <div class="txt_content multicolumn">
              <span>{{ block.settings.txt_content }}</span>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </section>
</div>

