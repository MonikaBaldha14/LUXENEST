{% style %}
.video-section {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}
@media (max-width: 767px) {
.video-section {
padding-top: {{ section.settings.padding_top }}px;
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}

.video-wrapper-{{ section.id }} {
height: {% if section.settings.video_height == '400px' %} 400px; {% endif %}
{% if section.settings.video_height == '500px' %} 500px; {% endif %}
{% if section.settings.video_height == '600px' %} 600px; {% endif %}
{% if section.settings.video_height == '700px' %} 700px; {% endif %}
{% if section.settings.video_height == '850px' %} 850px; {% endif %}
{% if section.settings.video_height == '100vh' %} 100vh; {% endif %}
}

.video-wrapper-{{ section.id }} video{
width: 100%;
height: 100%;
object-fit: cover;
}

.image_overlay.block-{{ section.id }} {
background-color: {{ section.settings.img_gradient_color }};
opacity: {{ section.settings.image_gradient_darkness }}%;
}

.video_inner_section {
    position: relative;
    display: block;
    width: 100%;
    
}

{% endstyle %}



<section id="video_section-{{ section.id }}" class="video-section">
  
  {% if section.settings.video_url != blank %}
  <div id="video_wrapper" class="video_inner_section video-wrapper-{{ section.id }}">
    <iframe src="{{ section.settings.video_url }}" frameborder="0" allowfullscreen></iframe>
    <div class="image_overlay block-{{ section.id }}"></div>
  </div>
  {% elsif section.settings.video_file != blank %}
  <div class="video_inner_section video-wrapper-{{ section.id }}">
    <video muted loop id="myVideoBackground" src="{{ section.settings.video_file.sources[1].url }}" autoplay
      type="video/mp4" width="100%"></video>
      <div class="image_overlay block-{{ section.id }}"></div>
  </div>
  {% else %}
  <div class="video_inner_section video-placeholder">
    {% if section.settings.video_thumbnail != blank %}
    <img src="{{ section.settings.video_thumbnail | img_url: 'large' }}" alt="Video Placeholder">
    <div class="image_overlay block-{{ section.id }}"></div>
    {% else %}
    <p>No video selected</p>
    {% endif %}
  </div>

  {% endif %}
</section>

{% schema %}
{
"name": "Video Section",
"tag": "section",
"class": "video-section",
"settings": [
{
"type": "color_scheme",
"id": "color_scheme",
"label": "Color Scheme",
"default": "scheme-1"
}, {
"type": "range",
"id": "padding_top",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Top",
"default": 36
}, {
"type": "range",
"id": "padding_bottom",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Bottom",
"default": 36
},
{
"type": "color",
"id": "img_gradient_color",
"label": "Image Gradient Color",
"default": "rgb(0, 0, 0)"
}, {
"type": "range",
"id": "image_gradient_darkness",
"min": 0,
"max": 100,
"step": 10,
"unit": "%",
"label": "Image Gradient Darkness",
"default": 20
},
{
"type": "header",
"content": "Video Settings"
},
{
"type": "text",
"id": "video_url",
"label": "Video URL (YouTube/Vimeo)"
},
{
"type": "image_picker",
"id": "video_thumbnail",
"label": "Video Thumbnail"
},
{
"type": "video",
"id": "video_file",
"label": "Upload Video File"
},
{
"type": "checkbox",
"id": "autoplay",
"label": "Autoplay",
"default": false
},
{
"type": "checkbox",
"id": "loop",
"label": "Loop",
"default": false
},
{
"type": "select",
"id": "video_height",
"label": "Video Height",
"options": [
{
"label": "Extra Small",
"value": "400px"
},
{
"label": "Small",
"value": "500px"
},
{
"label": "Medium",
"value": "600px"
},
{
"label": "Large",
"value": "700px"
}, {
"label": "Extra Large",
"value": "850px"
}, {
"label": "Full Screen",
"value": "100vh"
}
],
"default": "500px"
}
],
"presets": [
{
"name": "Video Section",
"category": "Media"
}
]
}
{% endschema %}