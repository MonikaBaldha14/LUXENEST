<style>
  .related_product {
    padding-top: {
        {
        section.settings.padding_top | times: 0.75 | round: 0
      }
    }

    px;

    padding-bottom: {
        {
        section.settings.padding_bottom | times: 0.75 | round: 0
      }
    }

    px;
  }

  @media (max-width: 767px) {
    .related_product {
      padding-top: {
          {
          section.settings.padding_top
        }
      }

      px;

      padding-bottom: {
          {
          section.settings.padding_bottom
        }
      }

      px;
    }
  }
</style>

<div class="related_product color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <section class="main-content">
    <div class="color-{{ section.settings.color_scheme }} gradient">
      <product-recommendations
        class="related-products page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.products_to_show }}">
        <div
          class="collection{% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %} section-{{ section.id }}-padding{% if section.settings.full_width %} collection--full-width{% endif %}"
          id="collection-{{ section.id }}" data-id="{{ section.id }}">
          {% if recommendations.performed and recommendations.products_count > 0 %}
          {% if section.settings.heading != blank or section.settings.content-inner != blank %}
          <div class="main_section_head">
            {% if section.settings.heading != blank %}
            <h2 class="heading">{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.content-inner != blank %}
            {{ section.settings.content-inner }}
            {% endif %}
          </div>
          {% endif %}
          {% comment %} <div class="featured-product-row responsive_slick">
            {% for recommendation in recommendations.products %}
            <div class="featured-product-inner-section">
              {% render 'card-product',
              card_product: recommendation %}
            </div>
            {% endfor %}
          </div> {% endcomment %}
          <ul data-id="{{ section.id }}" class="collection_product featured-product-row">
            {% for recommendation in recommendations.products %}
            <li class="featured_product featured_product_list grid__item">
              {% render 'card-product'
              , card_product: recommendation %}
            </li>
            {%- endfor -%}
          </ul>
          {% endif %}
      </product-recommendations>
    </div>
  </section>
</div>

{% schema %}
{
"name": "Related Product",
"settings": [
{
"type": "color_scheme",
"id": "color_scheme",
"label": "Color Scheme",
"default": "scheme-1"
},
{
"type": "range",
"id": "padding_top",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Top",
"default": 36
},
{
"type": "range",
"id": "padding_bottom",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Bottom",
"default": 36
},
{
"type": "text",
"id": "heading",
"label": "Collection",
"default": "Heading"
}, {
"type": "text",
"id": "content-inner",
"label": "Collection",
"default": "Content"
}, {
"type": "checkbox",
"id": "second_img",
"label": "Enable to on hover Second Image"
},
{
"type": "checkbox",
"id": "compare_product",
"label": "Compare Prouct"
}
]
}
{% endschema %}