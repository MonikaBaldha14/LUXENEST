<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  .button.button--primary {
    background-color: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
    height: 50px;
    display: inline-block;
    line-height: 50px;
    min-width: 165px;
    text-align: center;
    padding: 0 5px;
    margin-top: 15px;
  }

  .error_inner_section {
    text-align: center;
    width: 100%;
    position: relative;
  }

  .error_inner_section p {
    font-size: 18px;
    margin-bottom: 15px;
    color: rgb(var(--color-foreground));
  }

  .error_inner_section .title {
    font-size: 100px;
    color: rgb(var(--color-foreground));
    text-shadow: 3px 3px 0 rgb(var(--color-background))
    , 7px 7px 0 rgba(0, 0, 0, 0.15);
  }

  .error_main_page {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: rgb(var(--color-background));
  }

  @media (max-width: 767px) {
    .error_main_page {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>

<div class="error_main_page color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <section class="main-content">
    <div class="error_inner_section">
      <div class="template-404 page-width page-margin center">
        <p>
          {{ 'templates.404.title' | t }}
        </p>
        <h1 class="title">
          {{ 'templates.404.subtext' | t }}
        </h1>
        <a class="button button--primary" href="{{ routes.all_products_collection_url }}">
          {{ 'general.continue_shopping' | t }}
        </a>
      </div>
    </div>
  </section>
</div>

{% schema %}
  {
    "name": "404",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme",
        "default": "scheme-1"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ]
  }
{% endschema %}